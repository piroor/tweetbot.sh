{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.14",
  "description": "__MSG_extensionDescription__",
  "permissions": [
    "menus",
    "nativeMessaging",
    "storage",
    "notifications",
    "*://twitter.com/*",
    "*://*.twitter.com/*"
  ],
  "background": {
    "scripts": [
      "common/Configs.js",
      "common/common.js",
      "background.js"
    ]
  },
  "content_scripts" : [
    { "matches": [
        "*://twitter.com/*",
        "*://*.twitter.com/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_end" }
  ],
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "default_locale": "en",
  "applications": {
    "gecko": {
      "id": "tweetbotsh-remote-controller@piro.sakura.ne.jp",
      "strict_min_version": "63.0"
    }
  }
}
